- hosts: all

  become: yes

  become_method: sudo

  connection: ssh
  tasks:
    - name: upgrade the kernel
      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")
      yum:
        name: kernel
        state: latest

    - name: Reboot CentOS 6
      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")
      command: "ls -la"

    - name: Add user
      user:
        name: bob
        state: present

    - name: Install package for Debian
      when: ansible_os_family == "Debian"
      apt:
        name: wget
        state: present

    - name: Add 2 users to users to centos 7
      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")
      user:
       name: "{{ item }}"
       state: present
      with_items:
       - bryan
       - sam

    - name: Install webserver
      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")
      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      package:

        pkg: httpd

        state: latest
    - name: install apache2
      when: ansible_os_family == "Debian"
      apt: name=apache2 update_cache=yes state=latest
    - name: restart apache2
      when: ansible_os_family == "Debian"
      service: name=apache2 state=started

    - name: Install packages to Debian
      apt: package = {{ item }} state=installed force=yes update_cache=yes cache_valid_time=3600
      when: ansible_os_family == "Debian"
      with_items:
        - mysql-server
        - mysql-client
        - python-mysqldb


    - name: Copy template to remote system

      template:

        src: /tmp/index.html

        dest: /var/www/html/index.html

        owner: root

        group: root

        mode: 0755



    - name: install firewalld

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      package:

        name: firewalld

        state: latest



    - name: start firewall

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      systemd:

        name: firewalld

        state: started



    - name: Open port 22

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      command: "firewall-cmd --zone=public --add-port=22/tcp --permanent"



    - name: Open port on centos 7

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      command: "firewall-cmd --zone=public --add-port=80/tcp --permanent"



    - name: Open port on centos 7

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      command: "firewall-cmd --zone=public --add-port=443/tcp --permanent"



    - name: Open port on centos 7

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      command: "firewall-cmd --reload"



    - name: Open port 80

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")

      command: "iptables -I INPUT -p tcp --dport 80 -j ACCEPT"



    - name: Open port 443

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")

      command: "iptables -I INPUT -p tcp --dport 443 -j ACCEPT"



    - name: Save the rules

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")

      command: "service iptables save"



    - name: Restart iptables

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")

      service:

        name: iptables

        state: restarted



    - name: Start web server

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "6")

      service:

        name: httpd

        state: restarted

        enabled: yes



    - name: Start web server on centos 7

      when: (ansible_distribution == "CentOS" and ansible_distribution_major_version == "7")

      systemd:

        name: httpd

        state: restarted

        enabled: yes
